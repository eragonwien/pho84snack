@model Pho84SnackMVC.Models.Category
@{
}
<div class="section">
   <div class="level">
      <div class="level-left"></div>
      <div class="level-right">
         <div class="level-item">
            <a class="button is-small is-primary has-icons-left" asp-action="edit" asp-route-id="@Model.Id">
               <span class="icon is-small"><span class="oi" data-glyph="pencil"></span></span>
               <span>Edit</span>
            </a>
         </div>
      </div>
   </div>
   <div class="columns">
      <div class="column is-2-desktop">
         <p class="title is-size-6">@Html.DisplayNameFor(m => m.Name)</p>
      </div>
      <div class="column">@Html.DisplayFor(m => m.Name)</div>
   </div>
   <hr />
   <div class="columns">
      <div class="column is-2-desktop">
         <p class="title is-size-6">@Html.DisplayNameFor(m => m.Description)</p>
      </div>
      <div class="column">@Html.DisplayFor(m => m.Description)</div>
   </div>
   <hr />
   <p class="title is-size-6">@Html.DisplayNameFor(m => m.Products)</p>
   <div class="panel">
      @foreach (var product in Model.Products)
      {
         <a class="panel-block" asp-controller="product" asp-action="details" asp-route-id="@product.Id">
            <span class="panel-icon">
               <span class="icon is-small"><span class="oi" data-glyph="book"></span></span>
            </span>
            @product.Name
         </a>
      }
   </div>
</div>