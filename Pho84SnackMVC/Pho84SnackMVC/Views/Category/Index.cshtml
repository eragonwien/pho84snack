@model IEnumerable<Pho84SnackMVC.Models.Category>
@{
   ViewData["Title"] = "Index";
   var categoryTitleActions = new TitleWithRightActionsViewModel("Categories", Url.Action("create", "category"));
}
<partial name="_TitleWithRightActionsPartials" model="categoryTitleActions" />
<div style="margin-top: 10px;">
   @if (Model.Count() == 0)
   {
      <p class="has-text-centered">No item found</p>
   }
   else
   {
      <div class="list is-hoverable">
         @foreach (var category in Model)
         {
            <a class="list-item" asp-action="details" asp-route-id="@category.Id">@category.Name</a>
         }
      </div>
   }
</div>


