@model Pho84SnackMVC.Models.ViewModels.CategoryEditViewModel

@{
   ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
   <div class="col-md-4">
      <form asp-action="Edit">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         @Html.HiddenFor(m => m.Id)
         <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="ProductIds" class="control-label"></label>
            <select asp-for="ProductIds" asp-items="@Model.AvailableProducts" class="form-control chosen-select"></select>
            <span asp-validation-for="ProductIds" class="text-danger"></span>
         </div>
         <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal-delete-category">Remove</button>
         </div>
      </form>
   </div>
</div>

<div id="modal-delete-category" class="modal fade" role="dialog">
   <form asp-action="delete" method="post">
      @Html.HiddenFor(m => m.Id)
      <div class="modal-dialog">
         <div class="modal-content">
            <div class="modal-body">
               <p>Remove category @Model.Name ?</p>
            </div>
            <div class="modal-footer">
               <button asp-action="delete" type="submit" class="btn btn-danger">Remove</button>
               <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
         </div>

      </div>
   </form>

</div>

<div>
   <a asp-action="Index">Back to List</a>
</div>

