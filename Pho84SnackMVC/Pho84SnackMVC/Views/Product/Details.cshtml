@model Pho84SnackMVC.Models.Product

@{
   ViewData["Title"] = "Details";
   string currentUrl = Context.Request.Path;
   var productTitleWithActions = new TitleWithRightActionsViewModel(Model.Name.ToUpper(), null, Url.Action("edit", "product", new { Model.Id }));
}

<partial name="_TitleWithRightActionsPartial" model="productTitleWithActions" />
<div class="columns is-vcentered">
   <div class="column is-3 has-text-weight-bold">@Html.DisplayNameFor(m => m.Name)</div>
   <div class="column is-9">
      <p class="bd-notification">@Model.Name</p>
   </div>
</div>
<div class="columns">
   <div class="column is-3 has-text-weight-bold">@Html.DisplayNameFor(m => m.Description)</div>
   <div class="column is-9">
      <p class="bd-notification word-break-all">@Model.Description</p>
   </div>
</div>
<p class="has-text-weight-bold">@Html.DisplayNameFor(m => m.PriceList)</p>
<br />
@if (Model.PriceList.Count > 0)
{
   @foreach (var entry in Model.PriceList)
   {
      <div class="columns is-bordered">
         <div class="column header has-text-white is-4-tablet">@entry.ShortName</div>
         <div class="column">@entry.LongName</div>
         <div class="column is-2-tablet">@entry.DisplayPrice</div>
      </div>
   }
}
else
{
   <p class="bd-notification has-text-centered">No Product assigned</p>
}

