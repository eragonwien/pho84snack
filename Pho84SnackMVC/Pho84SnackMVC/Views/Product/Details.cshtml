@model Pho84SnackMVC.Models.Product

@{
   ViewData["Title"] = "Details";
   string currentUrl = Context.Request.Path;
}

<div class="section">
   <div class="columns">
      <div class="column is-2-desktop">
         <p class="title is-size-6">@Html.DisplayNameFor(m => m.Name)</p>
      </div>
      <div class="column">@Html.DisplayFor(m => m.Name)</div>
   </div>
   <hr />
   <div class="columns">
      <div class="column is-2-desktop">
         <p class="title is-size-6">@Html.DisplayNameFor(m => m.Description)</p>
      </div>
      <div class="column">@Html.DisplayFor(m => m.Description)</div>
   </div>
   <hr />
   <div class="columns">
      <div class="column is-2-desktop">
         <p class="title is-size-6">@Html.DisplayNameFor(m => m.PriceList)</p>
      </div>
      <div class="column">
         @if (Model.PriceList.Count > 0)
         {
            @foreach (var entry in Model.PriceList)
            {
               <div class="columns is-bordered">
                  <div class="column is-4-tablet has-text-weight-bold">@entry.ShortName</div>
                  <div class="column">@entry.LongName</div>
                  <div class="column is-2-tablet">@entry.DisplayPrice</div>
               </div>
            }
         }
         else
         {
            <p class="bd-notification has-text-centered">No Product assigned</p>
         }
      </div>
   </div>
</div>

