@model Pho84SnackMVC.Models.Product

@{
   ViewData["Title"] = "Details";
}

<div class="section">
   <div class="level">
      <div class="level-left"></div>
      <div class="level-right">
         <div class="level-item">
            <a class="button is-small is-primary has-icons-left" asp-action="edit" asp-route-id="@Model.Id">
               <span class="icon is-small"><span class="oi" data-glyph="pencil"></span></span>
               <span>Edit</span>
            </a>
         </div>
      </div>
   </div>
   <div class="columns">
      <div class="column is-2-desktop">
         <p class="title is-size-6">@Html.DisplayNameFor(m => m.Name)</p>
      </div>
      <div class="column">@Html.DisplayFor(m => m.Name)</div>
   </div>
   <hr />
   <div class="columns">
      <div class="column is-2-desktop">
         <p class="title is-size-6">@Html.DisplayNameFor(m => m.Description)</p>
      </div>
      <div class="column">@Html.DisplayFor(m => m.Description)</div>
   </div>
   <hr />
   <div class="columns">
      <div class="column is-2-desktop">
         <p class="title is-size-6">@Html.DisplayNameFor(m => m.ProductSizes)</p>
      </div>
      <div class="column">
         @if (Model.ProductSizes.Count > 0)
         {
            @foreach (var entry in Model.ProductSizes)
            {
               <div class="columns is-bordered">
                  <div class="column is-4-tablet has-text-weight-bold">@entry.Size.ShortName</div>
                  <div class="column">@entry.Size.LongName</div>
                  <div class="column is-2-tablet">@entry.Price</div>
               </div>
            }
         }
         else
         {
            <p class="bd-notification has-text-centered">No Product assigned</p>
         }
      </div>
   </div>
</div>

