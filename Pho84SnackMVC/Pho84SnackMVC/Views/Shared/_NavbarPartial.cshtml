@{ 
   string editLink = ViewData["Edit"]?.ToString();
   string title = ViewData["NavbarTitle"] != null ? ViewData["NavbarTitle"].ToString() : "Pho84Snack";
   var user = Context.User;
   bool isUserActive = bool.TryParse(user.FindFirstValue(AuthenticationSettings.ClaimTypeActive), out isUserActive) && isUserActive;
}

<nav class="navbar is-primary" role="navigation" aria-label="main navigation">
   <div class="navbar-brand">
      <a class="navbar-item" asp-controller="category" asp-action="index">
         <img src="~/images/logo.jpg">
      </a>

      <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbar-menu">
         <span aria-hidden="true"></span>
         <span aria-hidden="true"></span>
         <span aria-hidden="true"></span>
      </a>
   </div>

   <div id="navbar-menu" class="navbar-menu">
      <div class="navbar-end">
         <hr class="navbar-divider">
         @if (user.Identity.IsAuthenticated && isUserActive)
         {
            <a class="navbar-item" asp-controller="category" asp-action="index">Categories</a>
            <a class="navbar-item" asp-controller="product" asp-action="index">Products</a>
            <a class="navbar-item" asp-controller="user" asp-action="index">Users</a>
         }
         @if (user.Identity.IsAuthenticated)
         {
            <a class="navbar-item" asp-controller="account" asp-action="logout">Logout</a>
         }
         else
         {
            <a class="navbar-item" asp-controller="account" asp-action="login">Login</a>
         }
      </div>
   </div>
</nav>